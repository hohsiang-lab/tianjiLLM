// --- helper funcs for detail templates ---

func teamDetailTitle(t TeamRow) string {
	if t.TeamAlias != "" {
		return t.TeamAlias
	}
	return t.TeamID
}

func teamBudgetStr(v *float64) string {
	if v == nil {
		return ""
	}
	return fmt.Sprintf("%.2f", *v)
}

func teamLimitStr(v *int64) string {
	if v == nil {
		return ""
	}
	return fmt.Sprintf("%d", *v)
}
